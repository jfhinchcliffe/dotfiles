alias g='git'
alias gap='git add -p'
alias gco='git checkout'
alias gcm='git checkout master'
alias gl='pretty-git-log'
alias gs='git status --untracked-files=all'
alias uncommit='reset --soft HEAD^'
alias lsb='!git ls master..HEAD'

function pretty-git-log() {
  git log -M40 --pretty=format:'%Cred%h%Creset%C(yellow)%d%Creset %s %C(green bold)- %an %C(black bold)%cd (%cr)%Creset' --abbrev-commit --date=short "$@"
}